    <body>


    <script>
      var planetos = document.createElement("div");
      planetos.className = "planet";
      planetos.backgroundColor = "blue";
      document.body.appendChild(planetos);
      var moonly = document.createElement("div");
      moonly.className = "moon";
      document.planetos.appendChild("moonly");
    </script>
